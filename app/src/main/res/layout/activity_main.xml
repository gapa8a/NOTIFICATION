<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTIFICACIONES"
        android:layout_gravity="center"

        android:padding="20dp"
        android:textSize="30sp"
        android:textColor="@android:color/black"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta aplicación generara una notificación de prueba al momento de hacer clic en el botón “crear Notificación”. Asimismo, en el icono de ejecución de la aplicación se establecerá una placa que indicará la cantidad de notificaciones pendientes generadas previamente."
        android:layout_gravity="center"
        android:textAlignment="center"

        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        />
    <Button
        android:onClick = "createNotification"
        android:text = "crear notificación"
        android:layout_gravity="bottom"
        android:layout_marginTop="300dp"
        android:layout_margin="30dp"
        style="@style/Button"
        android:layout_centerInParent = "true"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta aplicación fue desarrollada por: Freddy Estupiñán ,Germán Parra y Laura Pulido"
        android:layout_gravity="center"
        android:textAlignment="center"

        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        />
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>